pipeline {
    environment {
        registry = "anaserrami/activity-jenkins"
        registryCredential = 'dockerhub'
        dockerImage = 'activity-jenkins'
    }
    agent any
    stages {
        stage('Cloning Git') {
            steps {
                git 'https://github.com/anaserrami/activity-Jenkins.git'
            }
        }
        stage('Building image') {
            steps {
                script {
                    dockerImage = docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
        stage('Test image') {
            steps {
                script {
                    echo "Tests passed"
                }
            }
        }
        stage('Publish Image') {
            steps {
                script {
                    docker.withRegistry('', registryCredential) {
                        dockerImage.push()
                    }
                }
            }
        }
        stage('Deploy image') {
            steps {
                script {
                    sh "docker run -d -p 80:80 --name tp2-container $registry:$BUILD_NUMBER"
                }
            }
        }
    }
}
